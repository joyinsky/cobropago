{
  "name": "cobropago",
  "version": "0.1.0",
  "description": "A powerful expense and income manager",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-production": "webpack --config webpack.prod.config.js --progress --colors",
    "css-compile": "node-sass frontend/sass -o cobropago/web/static/bundles",
    "css-watch": "node-sass frontend/sass -o cobropago/web/static/bundles --watch",
    "webpack-watch": "webpack --config webpack.local.config.js --watch",
    "browser-sync": "browser-sync start --files \" cobropago/web/static/bundles/*.css, cobropago/web/static/bundles/*.js, cobropago/**/*.py, cobropago/web/templates/*.html\" --proxy 127.0.0.1:8000 --reload-delay=300 --reload-debounce=500",
    "start": "concurrently --kill-others \"npm run css-watch\" \"python manage.py runserver\" \"npm run browser-sync\" \"npm run webpack-watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joyinsky/cobropago.git"
  },
  "author": "Luis Fernando Barrera",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/joyinsky/cobropago/issues"
  },
  "homepage": "https://github.com/joyinsky/cobropago#readme",
  "devDependencies": {
    "browser-sync": "^2.14.0",
    "concurrently": "^2.2.0",
    "node-sass": "^3.8.0",
    "react-hot-loader": "^1.3.0",
    "webpack": "^1.13.1",
    "webpack-bundle-tracker": "0.0.93",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "redux-rest-resource": "^0.6.0",
    "redux-thunk": "^2.1.0"
  }
}
