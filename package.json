{
  "name": "cobropago",
  "version": "0.1.0",
  "description": "A powerful expense and income manager",
  "main": "index.js",
  "author": "Luis Fernando Barrera",
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "bugs": {
    "url": "https://github.com/joyinsky/cobropago/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "mocha frontend/test --compilers js:babel-core/register --require frontend/test/test_helper.js --recursive",
    "test:watch": "npm run test -- --watch",
    "build-production": "webpack --config webpack.prod.config.js --progress --colors",
    "css-compile": "node-sass --include-path node_modules frontend/sass -o cobropago/web/static/bundles",
    "css-watch": "node-sass --include-path node_modules frontend/sass -o cobropago/web/static/bundles --watch",
    "webpack-watch": "webpack --config webpack.local.config.js --watch",
    "browser-sync": "browser-sync start --files \" cobropago/web/static/bundles/*.css, cobropago/web/static/bundles/*.js, cobropago/**/*.py, cobropago/web/templates/*.html\" --proxy 127.0.0.1:8000 --reload-delay=300 --reload-debounce=500",
    "start": "concurrently --kill-others \"python manage.py runserver\" \"npm run browser-sync\" \"npm run webpack-watch\" \"npm run storybook\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joyinsky/cobropago.git"
  },
  "homepage": "https://github.com/joyinsky/cobropago#readme",
   "devDependencies": {
    "babel-core": "^6.1.2",
    "babel-loader": "^6.1.0",
    "babel-plugin-transform-runtime": "^6.1.2",
    "babel-preset-es2015": "^6.1.2",
    "babel-runtime": "^6.0.14",
    "css-loader": "^0.21.0",
    "style-loader": "^0.13.0",
    "vue-hot-reload-api": "^1.2.1",
    "vue-html-loader": "^1.0.0",
    "vue-loader": "^7.0.1",
    "webpack": "^1.12.3",
    "webpack-dev-server": "^1.12.1"
  },
  "dependencies": {
    "bootflat": "^2.0.4",
    "bootstrap": "^3.3.7",
    "bootstrap-sass": "^3.3.7",
    "es6-promise": "^3.2.1",
    "exports": "0.0.1",
    "fetch": "^1.1.0",
    "immutable": "^3.8.1",
    "imports-loader": "^0.6.5",
    "vue-resource": "^0.1.17",
    "vue-router": "^0.7.5",
    "vue": "^1.0.7"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  }
}
